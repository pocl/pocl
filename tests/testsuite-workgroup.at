AT_CHECK([POCL_DEVICES=basic POCL_WORK_GROUP_METHOD=workitemloops $abs_top_builddir/tests/workgroup/run_kernel loopbarriers.cl 2 2 1 1], 0, stdout)
AT_CHECK([sort -c stdout])
AT_CLEANUP

AT_SETUP([Conditional barrier (full replication)])
AT_DATA([expout],
[LOCAL_ID=0 before if
LOCAL_ID=0 inside if
LOCAL_ID=1 before if
LOCAL_ID=1 inside if
LOCAL_ID=0 after if
LOCAL_ID=1 after if
])
AT_KEYWORDS([condbar workgroup])
AT_CHECK([POCL_DEVICES=basic POCL_WORK_GROUP_METHOD=workitemrepl $abs_top_builddir/tests/workgroup/run_kernel conditional_barriers.cl 1 2 1 1], 0, expout)
AT_CLEANUP

